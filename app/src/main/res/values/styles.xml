<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Text Style -->
    <style name="TextAppearance" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Buttons Style -->
    <style name="Buttons" parent="AppTheme">
        <item name="android:layout_width">@dimen/buttons_width</item>
        <item name="android:layout_height">@dimen/buttons_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <!-- Scroll View -->
    <style name="scrollView" parent="AppTheme">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Sunrise Cafe -->
    <style name="sunriseCafe" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/sunriseCafe_paddingTop</item>
        <item name="android:paddingBottom">@dimen/sunriseCafe_paddingBottom</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Title ImageView -->
    <style name="title" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- Social Media Layout -->
    <style name="social_media" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/socialMedia_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/socialMedia_marginBottom</item>
        <item name="android:padding">@dimen/socialMedia_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Social Media Icons -->
    <style name="social_media_icons" parent="AppTheme">
        <item name="android:layout_width">@dimen/socialMediaIcons_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Scroll Down Text -->
    <style name="TextAppearance.ScrollDown">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/contactInfo</item>
        <item name="android:padding">@dimen/contacts_padding</item>
    </style>

    <!-- About Text 16sp -->
    <style name="TextAppearance.About">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_margin">@dimen/aboutText_margin</item>
        <item name="android:padding">@dimen/aboutText_padding</item>
        <item name="android:background">@color/aboutTextBackground</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <!-- Rating Bar -->
    <style name="rating_bar" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/ratingBar_paddingBottom</item>
        <item name="android:paddingTop">@dimen/ratingBar_paddingTop</item>
    </style>

    <!-- Info Cafe -->
    <style name="info_cafe" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/infoCafe_background</item>
        <item name="android:paddingBottom">@dimen/infoCafe_paddingBottom</item>
        <item name="android:paddingTop">@dimen/infoCafe_paddingTop</item>
    </style>

    <!-- Contacts TextView -->
    <style name="TextAppearance.Contacts">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/contacts_padding</item>
        <item name="android:textSize">@dimen/contacts_textSize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Contact Info -->
    <style name="TextAppearance.ContactsInfo">
        <item name="android:drawablePadding">@dimen/contactInfo_drawablePadding</item>
        <item name="android:padding">@dimen/contactInfo_padding</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/contactInfo</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <!-- HorizontalScrollView -->
    <style name="horizontalScrollView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fillViewport">true</item>
        <item name="android:paddingBottom">@dimen/horizScroll_paddingBottom</item>
        <item name="android:paddingTop">@dimen/horizScroll_paddingTop</item>
    </style>

    <!-- Gallery Images -->
    <style name="gallery_image" parent="AppTheme">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Quick Order TextViews -->
    <style name="TextAppearance.Order">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_title</item>
        <item name="android:padding">@dimen/quickOrder_padding</item>
    </style>

    <!-- Divider-->
    <style name="divider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/divider_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/divider_marginBottom</item>
    </style>

    <!-- Button Decrement-->
    <style name="Buttons.Decrement">
        <item name="android:background">@color/buttons</item>
        <item name="android:layout_marginLeft">@dimen/buttons_margin</item>
    </style>

    <!-- Button Increment-->
    <style name="Buttons.Increment">
        <item name="android:background">@color/buttons</item>
        <item name="android:layout_marginRight">@dimen/buttons_margin</item>
    </style>

    <!-- Quantity TextView-->
    <style name="TextAppearance.Quantity">
        <item name="android:padding">@dimen/quantity_padding</item>
        <item name="android:textSize">@dimen/textSize_title</item>
    </style>

    <!-- Price Text-->
    <style name="TextAppearance.PriceText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/quantity_padding</item>
        <item name="android:textSize">@dimen/textSize_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Order-->
    <style name="Buttons.Order">
        <item name="android:layout_width">@dimen/buttonOrder_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/buttonOrder</item>
        <item name="android:layout_marginBottom">@dimen/buttonOrder_marginBottom</item>
    </style>


</resources>
